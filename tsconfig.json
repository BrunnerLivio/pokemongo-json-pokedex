{
	"compilerOptions": {
		"skipLibCheck": true,
		"module": "commonjs",
		"target": "es5",
		"noImplicitAny": false,
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"baseUrl": ".",
		"outDir": "lib",
		"declaration": true,
		"noLib": false,
		"moduleResolution": "node",
		"rootDirs": ["src", "test"],
		"paths": {
			"@core": [
				"src/core"
			],
			"@core/*": [
				"src/core/*"
			],
			"@components/*": [
				"src/components/*"
			],
			"@util": [
				"src/util"
			],
			"@util/*": [
				"src/util/*"
			],
			"@settings/app": [
				"src/app.settings"
			],
			"@settings/package": [
				"package.json"
			],
			"@data/*": [
				"src/data/*"
			],
			"@outcome": [
				"src/outcome"
			],
			"@outcome/*": [
				"src/outcome/*"
			],
			"@income": [
				"src/income"
			],
			"@income/*": [
				"src/income/*"
			]
		}
	},
	"exclude": [
		"**/node_modules",
		"**/lib",
		"**/*.spec.ts",
		"test/**.ts"
	]
}
